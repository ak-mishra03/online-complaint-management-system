<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<!-- Login Page -->
<div id="loginPage" class="login-container">
    <div class="login-box">
        <h1>Complaint Management</h1>

        <% if (typeof error !== "undefined") { %>
            <p style="color: red; margin-bottom: 10px;"><%= error %></p>
        <% } %>

        <!-- FORM (Express POST method) -->
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" id="username" type="text" placeholder="Enter username" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" id="password" type="password" placeholder="Enter password" required>
            </div>

            <button class="btn" type="submit">Login</button>
        </form>

        <!-- Demo Credentials -->
        <div class="demo-credentials">
            <h3>Demo Credentials:</h3>
            <p><strong>User:</strong> user123 / pass123</p>
            <p><strong>Admin:</strong> admin / admin123</p>
        </div>
    </div>
</div>

</body>
</html>